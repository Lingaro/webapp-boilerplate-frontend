{
  "name": "project",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm-run-all clean --parallel test build:*",
    "build:lint": "tslint 'src/**/*.ts' 'src/**/*.tsx' --format stylish",
    "build:bundle": "cross-env NODE_ENV=production webpack",
    "clean": "rimraf dist",
    "start": "npm-run-all -p start:*",
    "start:dev": "webpack-dev-server --hot",
    "start:tsc": "tsc --noEmit --watch --pretty",
    "start:test": "jest --watch --notify",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/webpack-env": "^1.13.5",
    "babili-webpack-plugin": "^0.1.2",
    "compression-webpack-plugin": "^1.1.11",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "git-revision-webpack-plugin": "^2.5.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "3.1.3"
  },
  "jest": {
    "testMatch": [
      "**/*.spec.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    }
  }
}
